<!DOCTYPE html>
<html lang="en">
<head>
	<%- include ('includes/head',{title:'Create new book'})%>
</head>
<body>
	<%-include('includes/header') %>
	<div class="container">
		<h1 class="title">Create book</h1>
		<form action="/books" method="POST">
			<div class="form-control">
				<label for="title">Title</label>
				<input type="text" id="title"name="title" required>
			</div>
			<div class="form-control">
				<label for="summary">Summary</label>
				<input type="text" id="summary"name="summary" required>
			</div>
			<div class="form-control">
				<label for="content">Content</label>
				<textarea type="text" id="content"name="content" rows="5" required></textarea>
			</div>
			<div class="form-control">
				<label for="datetime">DateTime</label>
				<input type="date" id="datetime" name="datetime">
			</div>
			<div class="form-control">
				<label for="select">Select author</label>
				<select id="author" name="author">
					<% for (const author of authors){%>
					  <option value="<%= author._id%>"><%=author.name%></option>
					  <%}%>
				      </select>
			</div>
			
			<button class="btn">Add book</button>
		</form>
	</div>
</body>
</html>